{
  "manifest_version": 3,
  "name": "Bing Rewards Search Helper",
  "description": "Helps complete Microsoft Rewards daily search tasks by opening Bing searches in new tabs",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Bing Rewards Search Helper"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "background": {
    "service_worker": "service-worker.js"
  }
}
